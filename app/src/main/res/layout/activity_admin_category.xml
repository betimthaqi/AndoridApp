<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity"
    android:background="@drawable/admin_wallpaper3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogn_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add new product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/matteblack"
        />

    <LinearLayout
        android:id="@+id/linear_layout_category1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogn_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/laptops"
            />

        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mobiles"
            />
        <ImageView
            android:id="@+id/headphones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/headphoness"
            />
        <ImageView
            android:id="@+id/mouses"
            android:layout_marginLeft="5dp"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/mouses"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layout_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout_category1"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        >

        <ImageView
            android:id="@+id/keyboards"
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp"
            android:src="@drawable/keyboards"
            />

        <ImageView
            android:id="@+id/cameras"
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp"
            android:src="@drawable/cameras"
            />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="90dp"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp"
            android:src="@drawable/watches"
            />

    </LinearLayout>

</RelativeLayout>